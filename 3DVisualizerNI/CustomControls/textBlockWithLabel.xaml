<UserControl x:Class="_3DVisualizerNI.CustomControls.textBlockWithLabel"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:_3DVisualizerNI.CustomControls"
      mc:Ignorable="d" 
      d:DesignHeight="25" d:DesignWidth="130">

    <Grid Name="Root">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="Auto"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Label Content="{Binding Label}" Grid.Column="0"></Label>
        <TextBlock Text="{Binding Text}" Width="60"  Margin="5 5 5 5"  HorizontalAlignment="Right" Grid.Column="1"></TextBlock>
    </Grid>
</UserControl>
