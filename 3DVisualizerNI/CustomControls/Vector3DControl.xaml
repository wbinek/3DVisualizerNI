<UserControl x:Class="_3DVisualizerNI.CustomControls.Vector3DControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:_3DVisualizerNI.CustomControls"
             mc:Ignorable="d"
             xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
             d:DesignHeight="100" d:DesignWidth="80">
    <Grid Name="Root">
        <StackPanel Orientation="Vertical">
            <StackPanel Orientation="Horizontal">
                <local:NumericWithLabel Label="X" Value="{Binding X, Mode=TwoWay}" Format="N1"></local:NumericWithLabel>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <local:NumericWithLabel Label="Y" Value="{Binding Y, Mode=TwoWay}" Format="N1"></local:NumericWithLabel>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <local:NumericWithLabel Label="Z" Value="{Binding Z, Mode=TwoWay}" Format="N1"></local:NumericWithLabel>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
